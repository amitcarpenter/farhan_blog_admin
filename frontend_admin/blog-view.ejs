    <div class="blog-group">
      <label for="image">Cover:</label>
      <% if (data.image) { %>
        <img src="/<%= data.image %>" alt="Cover Image" style="max-width: 100%; height: auto;">
        <% } else { %>
          <img src="/uploads/default-image.jpg" alt="Default Image" style="max-width: 100%; height: auto;">
          <% } %>
    </div>


    <div class="blog-group">
      <label for="title">Title:</label>
      <p>
        <%= data.title || '' %>
      </p>
    </div>

    <div class="blog-group">
      <label for="subtitle">Subtitle:</label>
      <p>
        <%= data.subtitle || '' %>
      </p>
    </div>

    <div class="blog-group">
      <label for="content">Content:</label>
      <p>
        <%= data.content || '' %>
      </p>
    </div>

    <div class="blog-group">
      <label for="author">Author:</label>
      <p>
        <%= data.author || '' %>
      </p>
    </div>

    <div class="blog-group">
      <label for="category">Category:</label>
      <p>
        <%= data.category || '' %>
      </p>
    </div>

    <div class="blog-group">
      <label for="post_time">Post Time:</label>
      <p>
        <%= data.post_time || '' %>
      </p>
    </div>
  </div>


